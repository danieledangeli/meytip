<!DOCTYPE html>
    <!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en" > <![endif]-->
    <!--[if gt IE 8]><!--> <html class="no-js" lang="en" > <!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Meytip</title>
    <link rel="stylesheet" href="{{ asset('css/foundation.css') }}" />
    <script src="{{ asset('js/vendor/custom.modernizr.js') }}"></script>
</head>
<body>

<!-- HEADER -->
<nav class="top-bar">
    <ul class="title-area">
        <li class="name logo"><a href="#"><img src="/meytip/web/img/logo.png"></a></li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
        <ul class="left">
            <li class="divider"></li>
            <li><a href="#">Profile</a></li>
            <li class="divider"></li>
            <li class="active"><a href="#">Events</a></li>
            <li class="divider"></li>
            <li><a href="#">People</a></li>
            <li class="divider"></li>

        </ul>
    </section>
</nav>
<!-- /HEADER -->
<!--USER PANEL -->


<div class="userpanel">
    <div class="row">
        <!-- NOME -->
        <div class="large-3 columns verticaldivider">
            <div class="large-5 small-6 columns">
                <img src="{{ asset('/back/meytip/web/img/nophoto.jpg') }}" width="70" height="70" alt="#">
            </div>
            <div class="large-7 small-6 collapsecolumns">
                <h4 class="white">{{ user.username }}</h4>
                <div><h8>Pending Bets</h8>
                    <div class="valuesmall" id="pending">
                        {{ user.pending | length }}
                    </div>
                </div>

                <div class="subvalue"><h8>Challenge</h8> <div class="valuesmall">0</div></div>
            </div>
        </div>
        <!-- /NOME -->
        <!-- SALVADANAIO -->
        <div class="large-2 columns verticaldivider">
            <div class="row">
                <div class="large-5 small-6 columns"><i><img src="/back/meytip/web/img/porco.png" alt=""></i></div>
                <div class="large-7 small-6 collapsecolumns">
                    <h4>Cash</h4>
                    <div class="value" id="cash">{{ user.cash }}</div>
                </div>
            </div>
        </div>
        <!-- /SALVADANAIO -->
        <!-- BEST CASE -->
        <div class="large-2 columns verticaldivider">
            <div class="row">
                <div class="large-5 small-6 columns"><i><img src="/back/meytip/web/img/win.png" alt=""></i></div>
                <div class="large-7 small-6 collapsecolumns">
                    <h4>Best Case</h4>
                    <div class="value">0</div>
                </div>
            </div>
        </div>
        <!-- /BEST CASE -->
        <!-- WORST CASE -->
        <div class="large-2 columns verticaldivider">
            <div class="row">
                <div class="large-5 small-6 columns"><i><img src="/back/meytip/web/img/lose.png" alt=""></i></div>
                <div class="large-7 small-6 collapsecolumns">
                    <h4>Worst Case</h4>
                    <div class="value">0</div>
                </div>
            </div>
        </div>
        <!-- /WORST CASE -->
        <!-- COIN -->
        <div class="large-3 columns">
            <div class="large-6 small-6 columns left">
                <h4>Daily Coins</h4>
                <a class="tiny button expand disabled" href="#">Take</a>
            </div>
            <div class="large-6 small-6 columns">
                <h4>Extra Coins</h4>
                <a class="tiny success button expand disabled" href="#">Take</a>
            </div>
        </div>
        <!--/COIN-->
    </div>
</div>
<!--/USER PANEL -->
<div class="row centrale">
    <div class="large-8 columns">
        <!--CTA -->
        <div class="panel">
            <h11>Invite your friends and we'll get you 10C for eac invited friend</h11>
            <a href="#" onclick="sendRequestViaMultiFriendSelector()" class="small success button invita"> Invite </a>
        </div>
        <!--/CTA-->

        <!-- FEED/STORICO -->
        <div class="section-container auto" data-section>
            <section class="section">
                <p class="title"><a href="#">Home Feed</a></p>
                <div class="content" id="contentfeed">

                    {% for f in feeds %}
                    <div class="feed">
                        <div class="row">
                            <div class="large-12 columns">
                                <div class="foto"><img src="#" alt="" width="30" height="30"></div>
                                <div class="testo"><h11><span class="blu"><a href="">{{ f.username }}</a> </span> ha effettuato questa scommessa </h11></div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="large-12 columns">

                                <div class="testo">Yield <h11><span class="green"><b>{{ f.moltiplicatore }}</b></span> Amount <h11><span class="black"></b>{{ f.amount }}</b></span> </h11></div>
                                <div class="testo">Winning <h11><span class="green"><b>{{ f.vincita }}</b></span></h11></div>
                            </div>

                        </div>

                        <table style="width:100%">


                            <thead>

                            <tr>
                                <th><h6>INNOVACTION LAB FINAL EVENT</h6></th>
                                <th><h6>Podium</h6></th>
                                <th><h6>No Podium</h6></th>
                                <th><h6>1</h6></th>
                                <th><h6>X</h6></th>
                                <th><h6>2</h6></th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for quota in f.quote %}

                            <tr event="{{ quota.quote.team.id }}" eventname="{{ quota.quote.team.name }}">

                                <td> <a href="#" >{{ quota.quote.team.name }}</a></td>
                                {% if quota.prono == 'podio' %}
                                    <td><a href="#" class="tiny success button event" value="{{ quota.quote.podio }}" bet="podio" betid="222" bettype="finale sì/no" >
                                        {{ quota.quote.podio }}</a></td>
                                {% else %}
                                    <td><a href="#" class="tiny secondary button event" value="{{ quota.quote.podio }}" bet="podio" betid="222" bettype="finale sì/no" >
                                            {{ quota.quote.podio }}</a></td>
                                {% endif %}
                                {% if quota.prono == 'nopodio' %}
                                    <td><a href="#" class="tiny success button event\" value="{{ quota.quote.nopodio }}" bet="podio" betid="222" bettype="finale sì/no" >
                                            {{ quota.quote.nopodio }}</a></td>

                                {% else %}
                                    <td><a href="#" class="tiny secondary button event\" value="{{ quota.quote.nopodio }}" bet="podio" betid="222" bettype="finale sì/no" >
                                            {{ quota.quote.nopodio }}</a></td>
                                {% endif %}
                                <td><a href="#"{ class="tiny button secondary disabled ">ND</a></td>
                                <td><a href="#" class="tiny button secondary disabled">ND</a></td>
                                <td><a href="#" class="tiny button secondary disabled">ND</a></td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>



                    </div>
                    <div>
                        {% endfor %}

                        <h11><a id="show" onclick="loadfeeds()" class="expand secondary button">SHOW MORE </a></h11>
            </section>
            <section class="section">
                <p class="title"><a href="#">Your Bet</a></p>

            </section>
        </div>
    </div>
    <!-- /EVENTS -->

    <div class="large-4 columns">
        <ul class="pricing-table nomargine" id="curbet">
            <li class="title"><h9>Your bets</h9></li>
        </ul>
        <table class="betting">
            <tbody>
            <tr>
                <td><h13>Odds</h13></td>
                <td><h13 id="quotatotale">0</h13></td>
            </tr>
            <tr>
                <td><h13>Amount</h13></td>
                <td><form><input type="text" id="stake" placeholder="Inserire importo"></form></td>
            </tr>
            <tr>
                <td><h13>Winning</h13></td>
                <td><h13 id="potenziale">0</h13></td>
            </tr>
            </tbody>
        </table>

        <a class=" success button expand marginebottom" href="#" onclick="bet('{{ user.id }}');" id="play">BET</a>

        <ul class="pricing-table">
            <li class="title"><h9>Comments</h9></li>
            <li>
                <div class="fb-comments" data-href="https://apps.facebook.com/mymeytip/index.php" data-width="300" data-num-posts="15"></div>
            </li>
        </ul>

    </div>


</div>
</div>

<script>
    document.write('<script src=' +
            ('__proto__' in {} ? '/back/meytip/web/js/vendor/zepto' : '/back/meytip/web/js/vendor/jquery') +
            '.js><\/script>')
</script>

<script src="{{ asset('js/foundation.min.js') }}"></script>
<script src="{{ asset('js/foundation/foundation.tooltips.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/meytip.js') }}"></script>
</body>


</html>
